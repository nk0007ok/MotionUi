<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/_8sdp">

        <LinearLayout
            android:id="@+id/llwalletAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:id="@+id/ivSecondScreenOne"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/gray_rectangle_box" />

            <ImageView
                android:id="@+id/ivSecondScreenTwo"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:src="@drawable/gray_rectangle_box" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtSecondNoOne"
                    android:layout_width="@dimen/_48sdp"
                    android:layout_height="@dimen/_48sdp"
                    android:background="@drawable/green_cricle"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtSecondNoTwo"
                    android:layout_width="@dimen/_48sdp"
                    android:layout_height="@dimen/_48sdp"
                    android:background="@drawable/gray_cricle"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtSecondNoThree"
                    android:layout_width="@dimen/_48sdp"
                    android:layout_height="@dimen/_48sdp"
                    android:background="@drawable/gray_cricle"
                    android:gravity="center"
                    android:text="15"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llReady"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <include
                android:id="@+id/includedReady"
                layout="@layout/layout_ready_play" />

        </LinearLayout>

    </LinearLayout>
</layout>